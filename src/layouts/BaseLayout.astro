---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const {
  title = "So Cal Snow Avalanche Center",
  description = "Avalanche observations, snowpack summaries, weather, and safety resources for Southern California backcountry travelers.",
  ogType = "website",
  publishedTime,
  robots = "index,follow"
} = Astro.props;

const ogImage = new URL("/favicon.svg", Astro.site ?? "https://www.socalsnow.org").toString();

const organizationJsonLd = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "So Cal Snow Avalanche Center",
  url: Astro.site?.toString() ?? "https://www.socalsnow.org",
  sameAs: ["https://www.instagram.com/socalsnowavalanchecenter/"],
  description
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous" />
    <link href="https://fonts.googleapis.com/css2?family=Bricolage+Grotesque:opsz,wght@12..96,600;12..96,700;12..96,800&family=Lexend:wght@400;500;600;700&family=IBM+Plex+Mono:wght@400;500&display=swap" rel="stylesheet" />
    <meta name="description" content={description} />
    <meta name="robots" content={robots} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={Astro.url.toString()} />
    <meta property="og:image" content={ogImage} />
    {publishedTime ? <meta property="article:published_time" content={publishedTime} /> : null}
    <link rel="canonical" href={Astro.url.toString()} />
    <link rel="alternate" type="application/rss+xml" title="So Cal Snow Summaries RSS" href="/rss.xml" />
    <script type="application/ld+json" set:html={JSON.stringify(organizationJsonLd)}></script>
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <a class="skip-link" href="#main-content">Skip to main content</a>
    <Header currentPath={Astro.url.pathname} />
    <main id="main-content" data-pagefind-body>
      <slot />
    </main>
    <Footer />
  </body>
</html>
